{
  "name": "HackathonAI",
  "version": "1.0.0",
  "description": "HackathonAI is a project that aims to provide a platform for hackathon participants to collaborate and share their ideas. The platform will use AI to help participants find teammates, brainstorm ideas, and develop their projects. The goal is to create a supportive and inclusive environment for hackathon participants to learn and grow together.",
  "scripts": {
    "clean": "pnpm exec rimraf node_modules out",
    "install:ci": "pnpm install --no-frozen-lockfile",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write '**/**/*.{ts,tsx,js,jsx,css}'",
    "format_check": "prettier --check '**/**/*.{ts,tsx,js,jsx,css}'",
    "lint_text": "pnpm exec textlint '**/*.md'",
    "lint_text_fix": "pnpm exec textlint '**/*.md' --fix",
    "lint-staged": "lint-staged",
    "husky": "husky install",
    "start": "next start",
    "build": "next build",
    "dev": "next dev",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "mcp:build": "cd mcp-server && pnpm run build",
    "mcp:install": "cd mcp-server && pnpm install",
    "remove-duplicates": "tsx src/scripts/removeDuplicates.ts"
  },
  "keywords": [],
  "author": "Susumu Tomita <oyter880@gmail.com> (https://susumutomita.netlify.app/)",
  "license": "MIT",
  "dependencies": {
    "@qdrant/js-client-rest": "^1.11.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@vercel/analytics": "^1.3.1",
    "axios": "^1.7.7",
    "cheerio": "^1.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dompurify": "^3.0.5",
    "groq-sdk": "^0.30.0",
    "isomorphic-dompurify": "^2.26.0",
    "lucide-react": "^0.548.0",
    "next": "^16.0.7",
    "ollama": "^0.5.17",
    "react": "^18",
    "react-dom": "^18",
    "react-textarea-autosize": "^8.5.9",
    "tailwind": "^2.3.1",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.5.4",
    "uuid": "^11.1.0",
    "winston": "^3.14.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@tailwindcss/postcss": "^4.1.17",
    "@textlint-ja/textlint-rule-preset-ai-writing": "^1.6.1",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^24",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "dotenv": "^16.6.1",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.0.7",
    "husky": "^9.1.4",
    "node-mocks-http": "^1.15.1",
    "postcss": "^8",
    "prettier": "^3.3.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17",
    "textlint": "^14.0.5",
    "textlint-rule-ja-no-abusage": "^3.0.0",
    "textlint-rule-ja-no-inappropriate-words": "^2.0.0",
    "textlint-rule-no-double-negative-ja": "^2.0.1",
    "textlint-rule-no-dropping-the-ra": "^3.0.0",
    "textlint-rule-prefer-tari-tari": "^1.0.3",
    "textlint-rule-preset-ja-spacing": "^2.2.0",
    "textlint-rule-preset-ja-technical-writing": "^10.0.1",
    "textlint-rule-spellcheck-tech-word": "^5.0.0",
    "tsx": "^4.20.6",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.15.2",
  "mcpServers": {
    "hackathon-database": {
      "command": "node",
      "args": [
        "mcp-server/dist/index.js"
      ],
      "env": {
        "QD_URL": "${QD_URL}",
        "QD_API_KEY": "${QD_API_KEY}",
        "NOMIC_API_KEY": "${NOMIC_API_KEY}"
      }
    }
  }
}
